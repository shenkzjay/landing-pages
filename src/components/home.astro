<script>
  const details = document.querySelectorAll("details");

  const photos = document.querySelectorAll(".photo") as NodeListOf<HTMLSpanElement>;

  let interval: number;

  details.forEach((detail, idx) => {
    detail.addEventListener("click", () => {
      photos.forEach((photo) => (photo.style.display = "none"));

      if (photos[idx]) {
        photos[idx].style.display = "flex";
      }
    });
  });

  let index = 0;
  const slides = document.querySelectorAll(".testimonialscroll div");

  function showNextSlide() {
    slides[index].classList.remove("active");
    slides[index].classList.add("prev");

    index = (index + 1) % slides.length;

    slides[index].classList.remove("prev");
    slides[index].classList.add("active");
  }

  function startCarousel() {
    interval = setInterval(showNextSlide, 5000);
  }

  function stopCarousel() {
    clearInterval(interval);
  }

  // Start the carousel when the page loads
  startCarousel();

  // Stop the interval when the page is unloaded (prevents memory leaks)
  window.addEventListener("beforeunload", stopCarousel);

  // OPTIONAL: Pause when hovering over the carousel
  document.getElementById("carousel")?.addEventListener("mouseenter", stopCarousel);
  document.getElementById("carousel")?.addEventListener("mouseleave", startCarousel);
</script>
